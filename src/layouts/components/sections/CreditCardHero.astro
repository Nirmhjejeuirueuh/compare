---
/**
 * CreditCardHero Component
 * Hero section for credit card comparison page with breadcrumb, title, and filter buttons
 */

import FilterButton from "@/components/widgets/FilterButton.astro";

interface FilterButtonItem {
  label: string;
  active?: boolean;
  hasDropdown?: boolean;
  category?: string;
}

interface Props {
  breadcrumb?: Array<{ label: string; url?: string }>;
  title?: string;
  description?: string;
  filters?: FilterButtonItem[];
}

const {
  breadcrumb = [
    { label: "Home", url: "/" },
    { label: "Credit Card" },
  ],
  title = "Compare the Best Credit Cards in Singapore 2025",
  description = "Compare and find your ideal card with MoneySmart's easy-to-use credit card comparison tool.",
  filters = [
    { label: "All credit cards", active: true, category: "all" },
    { label: "Promo", category: "promo" },
    { label: "Cash Back", category: "cashback" },
    { label: "Air Miles", category: "travel" },
    { label: "Travel", category: "travel" },
    { label: "Rewards", category: "rewards" },
    { label: "More", hasDropdown: true },
  ],
} = Astro.props;
---

<section class="credit-card-hero relative overflow-hidden bg-gradient-to-br from-slate-800 via-slate-900 to-slate-800 py-12 md:py-16 lg:py-20">
  <div class="container">
    <!-- Breadcrumb -->
    <nav class="mb-6" aria-label="Breadcrumb">
      <ol class="flex items-center gap-2 text-sm">
        {
          breadcrumb.map((item, index) => (
            <li class="flex items-center gap-2">
              {index > 0 && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="text-white/50"
                >
                  <path d="m9 18 6-6-6-6" />
                </svg>
              )}
              {item.url ? (
                <a
                  href={item.url}
                  class="text-white/70 hover:text-white transition-colors"
                >
                  {item.label}
                </a>
              ) : (
                <span class="text-white font-medium">{item.label}</span>
              )}
            </li>
          ))
        }
      </ol>
    </nav>

    <!-- Title and Description -->
    <div class="mb-8 max-w-3xl">
      <h1 class="mb-4 text-3xl font-bold leading-tight text-white md:text-4xl lg:text-5xl">
        {title}
      </h1>
      <p class="text-base leading-relaxed text-white/85 md:text-lg">
        {description}
      </p>
    </div>

    <!-- Filter Buttons -->
    <div class="flex flex-wrap gap-3">
      {
        filters.map((filter) => (
          <FilterButton
            label={filter.label}
            active={filter.active}
            hasDropdown={filter.hasDropdown}
            category={filter.category}
          />
        ))
      }
    </div>
  </div>
</section>
