---
/**
 * FinanceHero Component
 * Hero section for financial services comparison platform
 * Features gradient background, category cards, and call-to-action
 */

import CategoryCard from "@/components/cards/CategoryCard.astro";
import CustomButton from "@/components/CustomButton.astro";
import Customers from "@/components/sections/Customers.astro";

interface CategoryItem {
  icon: string;
  title: string;
  url?: string;
}

interface Props {
  tagline?: string;
  title?: string;
  categories?: CategoryItem[];
  ctaHeading?: string;
  ctaDescription?: string;
  buttons?: Array<{
    label: string;
    url: string;
    variant?: "fill" | "outline" | "text";
  }>;
}

const {
  tagline = "Singapore's No. 1 personal finance platform",
  title = "Save, Protect and Grow Your Money",
  categories = [
    { icon: "credit-card", title: "Credit Cards", url: "/credit-card/" },
    { icon: "plane", title: "Travel Insurance", url: "#" },
    { icon: "file-text", title: "Personal Loans", url: "/personal-loan/" },
    { icon: "piggy-bank", title: "Savings Accounts", url: "#" },
    { icon: "trending-up", title: "Investments", url: "/investment/" },
    { icon: "car", title: "Car Insurance", url: "#" },
    { icon: "landmark", title: "Priority Banking", url: "#" },
    { icon: "user-check", title: "Maid Insurance", url: "#" },
    { icon: "home", title: "Home Insurance", url: "#" },
  ],
  ctaHeading = "The right credit card is right here, look no further",
  ctaDescription = "We have done the job for you and selected the best cards available in Singapore.",
  buttons = [
    { label: "Compare Credit Cards", url: "/credit-card/", variant: "fill" },
    { label: "Compare Personal Loans", url: "/personal-loan/", variant: "outline" },
  ],
} = Astro.props;
---

<section class="finance-hero relative overflow-hidden bg-white py-16 md:py-20 lg:py-24">
  <div class="container">
    <!-- Hero Content -->
    <div class="mx-auto max-w-6xl space-y-10 md:space-y-12">
      <!-- Tagline and Title -->
      <div class="space-y-4 text-center">
        {tagline && (
          <p class="text-sm font-semibold uppercase tracking-wider text-gray-600 md:text-base">
            {tagline}
          </p>
        )}
        {title && (
          <h1 class="text-4xl font-bold leading-tight text-gray-900 md:text-5xl lg:text-6xl">
            {title}
          </h1>
        )}
      </div>

      <!-- Category Cards Grid -->
      <div
        class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:gap-5"
        data-aos="fade-up"
        data-aos-delay="200"
      >
        {categories.map((category) => (
          <CategoryCard
            icon={category.icon}
            title={category.title}
            url={category.url}
          />
        ))}
      </div>

      <Customers lightLogo={false} />
    </div>
  </div>
</section>

<style>
  .finance-hero {
    min-height: 500px;
  }

  @media (min-width: 768px) {
    .finance-hero {
      min-height: 600px;
    }
  }

  @media (min-width: 1024px) {
    .finance-hero {
      min-height: 650px;
    }
  }

  /* Custom outline button style for white background */
  :global(.finance-hero-outline-btn) {
    background-color: transparent !important;
    border: 2px solid var(--color-primary) !important;
    color: var(--color-primary) !important;
  }

  :global(.finance-hero-outline-btn:hover) {
    background-color: var(--color-primary) !important;
    color: white !important;
  }
</style>
