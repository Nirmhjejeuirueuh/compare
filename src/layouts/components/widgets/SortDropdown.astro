---
/**
 * SortDropdown Component
 * Dropdown for sorting credit cards
 */

interface SortOption {
  value: string;
  label: string;
}

interface Props {
  options?: SortOption[];
  defaultValue?: string;
}

const {
  options = [
    { value: "featured", label: "Featured" },
    { value: "rating-high", label: "Highest Rating" },
    { value: "rating-low", label: "Lowest Rating" },
    { value: "fee-low", label: "Annual Fee: Low to High" },
    { value: "fee-high", label: "Annual Fee: High to Low" },
    { value: "name-az", label: "Name: A to Z" },
    { value: "name-za", label: "Name: Z to A" },
  ],
  defaultValue = "featured",
} = Astro.props;
---

<div class="sort-dropdown relative">
  <label for="sort-select" class="mb-2 block text-sm font-medium text-dark">
    Sort by:
  </label>
  <select
    id="sort-select"
    class="w-full rounded-lg border-2 border-gray-300 bg-white px-4 py-2.5 text-sm font-medium text-dark transition-all duration-200 hover:border-primary focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20 cursor-pointer"
  >
    {
      options.map((option) => (
        <option value={option.value} selected={option.value === defaultValue}>
          {option.label}
        </option>
      ))
    }
  </select>
</div>
