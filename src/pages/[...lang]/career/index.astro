---
import Base from "@/layouts/Base.astro";
import { generatePaths } from "@/lib/utils/i18nUtils";
import { getEntryCTM } from "@/lib/contentParser.astro";
import JobList from "@/components/sections/JobList.astro";
import FaqSection from "@/components/sections/FaqSection.astro";
import CareerHero from "@/components/sections/careerHero.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import BenefitsSection from "@/components/sections/BenefitsSection.astro";
import config from ".astro/config.generated.json" with { type: "json" };

export function getStaticPaths() {
  return generatePaths();
}

const { careerFolder } = config.settings;
const careerListPage = await getEntryCTM(
  careerFolder as "career",
  "-index",
  Astro.currentLocale,
);
const benefits = await getEntryCTM(
  "sections",
  "career-benefits",
  Astro.currentLocale,
);
---

<Base {...careerListPage.data}>
  <CareerHero />
  <BenefitsSection content={benefits.data} />
  <JobList content={careerListPage.data.careerSection} />
  <FaqSection />
  <CallToAction />
</Base>
