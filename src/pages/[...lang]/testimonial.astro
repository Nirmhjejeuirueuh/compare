---
import Base from "@/layouts/Base.astro";
import { getEntryCTM } from "@/lib/contentParser.astro";
import handleDraftPage from "@/lib/utils/handleDraftPage";
import SinglePageLayout from "@/components/SinglePageLayout.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import { generatePaths } from "@/lib/utils/i18nUtils";
import TestimonialCard from "@/components/cards/TestimonialCard.astro";

export function getStaticPaths() {
  return generatePaths();
}

const testimonialListPage = await getEntryCTM(
  "testimonial",
  "-index",
  Astro.currentLocale,
);

// Remove drafts pages in production
const response = handleDraftPage(testimonialListPage?.data);
if (response) return response;
---

<Base {...testimonialListPage?.data}>
  <SinglePageLayout content={testimonialListPage}>
    <div slot="content">
      {
        testimonialListPage.data?.list && (
          <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {testimonialListPage.data?.list
              .filter((item: any) => item.enable !== false)
              .map((testimonial: any) => (
                <TestimonialCard content={testimonial} />
              ))}
          </div>
        )
      }
    </div>
  </SinglePageLayout>
  <CallToAction />
</Base>
